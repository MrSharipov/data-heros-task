.app-select-input{
  display flex
  flex-direction column
  .select-wrapper{
    position relative
    .selected-option{
      min-width 10rem
      min-height 1.35rem
      cursor pointer
      font-size 16px
      border 1px solid gray
      padding 5px
      border-radius 5px
      display inline-flex
      align-items center
      justify-content space-between
      gap .8rem
    }

    .option-wrapper{
      position absolute
      margin-top .2rem
      width 100%
      background-color #3D3E44
      color white
      border 1px solid gray
      border-radius 6px
      .option{
        padding 5px
        cursor pointer
        &:hover{
          background-color gray
          color white
        }
      }
    }

    //Transition
    .v-move,
    .v-enter-active,
    .v-leave-active {
      transition: 0.3s ease;
    }

    .v-enter-from,
    .v-leave-to {
      opacity: 0;
      transform: translateY(10px);
    }
  }
}