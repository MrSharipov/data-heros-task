.app-nav{
  display flex
  align-items center
  justify-content space-between
  width 95%
  img{
    width 45px
    height 45px
    border-radius 50%
    border 1px solid black
  }
  ul{
    display flex
    align-items center
    gap 2rem
    li{
      cursor pointer
      &:last-child{
        border 1px solid rgb(255, 152, 0)
        padding .7rem
        border-radius 6px
        font-size 14px
      }
    }
  }
}